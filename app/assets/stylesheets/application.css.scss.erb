@import url(http://fonts.googleapis.com/css?family=Rock+Salt);
@import url(http://fonts.googleapis.com/css?family=Oxygen);

form div {
  margin: 1em 0;
}

body {
	font-family: 'Oxygen' Helvetica, sans-serif;
	margin: 0;
	  
	background: -webkit-repeating-radial-gradient(#EFF70A, #A19443);
	
    

}

.login{
	position: relative;
	float: right;
	font-size: 13px;
	top: -40px;
	margin-right: 30px;
}

.bill{
	background-image: url(<%= image_path "ten_dollar_bill.jpg" %>);
	background-repeat: no-repeat;
	background-size: 300px;
	height: 125px;
	width: 300px;
	box-shadow: 10px 10px 5px #5E5959;
	-webkit-box-shadow: 10px 10px 5px #5E5959;

	position: relative;
	margin-left: 465px;
	margin-bottom: -85px;
    clip: border-box;
    transition: background-size 1.2s;
    -webkit-transition: background-size 1.5s;
    transition-timing-function: cubic-bezier(.07,1.41,.82,1.41);
    
   
}

.menu {
	height: 45px;
	width: 100%;
	background-color: beige;
	position: relative;
	


}

.menu a{

	margin: 0 0 0 20px;
}

.menu-item{
	text-decoration: none;

}

div:hover {
    background-size: 400px;

}

.flash_msg{
	display: inline;
	font-size: 25px;
	color: blue;
}
.item-margin{
	margin-left: 40px;
}
:link{
	color: purple;
}

#tenstore{
	position: relative;
	margin-top: 100px;
