      
<div class="item-margin">
      <%= form_for @seller do |f| %>
        <div>
          <%= f.label :first_name %>
          <%= f.text_field :first_name %>

          <%= f.label :last_name %>
          <%= f.text_field :last_name %>

          <%= f.label :phone %>
          <%= f.text_field :phone %>

          <%= f.label :email %>
          <%= f.text_field :email, size: "50px" %><br><br>

          <%= f.label "User Name"%>
          <%= f.text_field :username, size: "30px" %>

          <%= f.label :password %> 
          <%= f.password_field :password, size: "30px" %>

        </div>
        <div>
          <%= f.submit %> <br><br>
          <%= link_to "Cancel", items_path , {:style=>'color:blue;', :class => "css_class"} %>
        </div>
      <% end %>
</div>