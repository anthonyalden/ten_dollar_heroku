<div class="bill"></div>

<h3 id="tenstore">The Ten Dollar Store </h3>

<div class="item-margin">
		<ul>
			<!-- prints error messages from validation rules in model -->
		    <% @seller.errors.full_messages.each do |msg| %>
		        <li> <%= msg %></li>
		    <% end %>
		</ul>

		<h1 id="title">Edit <%= @seller.username %></h1><br>

		<!-- error message if existing user chooses new username already in use  -->
		<% if flash[:notice] %>
		    <div class = "flash_msg"><%= flash[:notice] %></div>
		<% end %>

		<%= render "sellers/form", object: @seller %>

		<%= link_to "Delete #{@seller.first_name} #{@seller.last_name}", seller_path(@seller), method: :delete, data: {confirm: "Are you sure you want to delete #{@seller.username}?"} %><br><br>
</div>

