
<!-- if the user is a seller display these menu options -->
<% if logged_in? %>
	
	<nav class="menu">
	  <%= link_to "Edit Account", edit_seller_path(current_user), class: "menu-item" %>
	  <%= link_to "Display All Seller's Items", items_path, class: "menu-item" %>
	  <%= link_to "Seller's Items Listing", current_user, class: "menu-item" %>
	  <%= link_to "Add Item", new_item_path,class:"menu-item" %>
	  <%= link_to "Log Out", logout_path , method: 'delete', class: "menu-item" %>
	</nav><br>
	
<%end %>

<!-- if the user is a buyer and not a seller display these menu options -->
<% if logged_in? == false %>
	<nav class="menu">
	  <%= link_to "Create Account", new_seller_path, class: "menu-item"%>
	  <%= link_to "All Items", items_path, class: "menu-item" %>
	</nav><br>
<% end %>





